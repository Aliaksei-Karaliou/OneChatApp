<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.korol.onechatapp.ConversationActivity">

    <LinearLayout
        android:id="@+id/activity_conversation_new_message_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_conversation_new_message_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@null"
            android:inputType="textMultiLine|textNoSuggestions"/>

        <Button
            android:id="@+id/activity_conversaion_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="Send"
            android:onClick="sendButtonOnClick"/>
    </LinearLayout>

    <ListView
        android:id="@+id/activity_conversation_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_conversation_new_message_line">
    </ListView>
</RelativeLayout>
