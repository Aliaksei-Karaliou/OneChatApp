<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.AliakseiKaraliou.onechatapp.ui.activities.ConversationActivity">

    <RelativeLayout
        android:id="@+id/activity_conversation_new_message_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_conversation_send_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="sendButtonOnClick"
            android:saveEnabled="false"
            android:text="@string/activity_conversation_send_button_text"
            app:srcCompat="@drawable/ic_send_button"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/activity_conversation_new_message_text"
            android:layout_toStartOf="@id/activity_conversation_send_button"
            android:layout_height="match_parent"
            android:background="@null"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textMultiLine"/>
    </RelativeLayout>

    <View
        android:id="@+id/activity_conversation_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/activity_conversation_new_message_line"
        android:background="@android:color/darker_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_conversation_message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_conversation_separator">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
