<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.korol.onechatapp.ConversationActivity">

    <LinearLayout
        android:id="@+id/activity_conversation_new_message_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_conversation_new_message_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@null"
            android:inputType="textMultiLine|textNoSuggestions"/>

        <Button
            android:id="@+id/activity_conversaion_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:onClick="sendButtonOnClick"
            android:text="@string/activity_conversation_send_button_text"/>
    </LinearLayout>

    <View
        android:id="@+id/activity_conversation_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/activity_conversation_new_message_line"
        android:background="@android:color/darker_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_conversation_message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_conversation_separator">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
