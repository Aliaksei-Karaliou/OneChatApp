<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_screen_message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="5dp">

    <ImageView
        android:id="@+id/start_screen_message_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/start_screen_user_avatar_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/start_screen_message_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/start_screen_message_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Message"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>