<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_screen_message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/start_screen_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="ID"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/start_screen_message_sender_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="TYPE"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/start_screen_message_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/start_screen_user_avatar_description"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_screen_message_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/start_screen_message_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Message"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>