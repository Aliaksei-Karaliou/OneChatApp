<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             tools:context="com.github.aliakseiKaraliou.onechatapp.ui.activities.DialogsListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_dialogs_list_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.design.widget.NavigationView
        android:id="@+id/activity_dialogs_list_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/dialog_list_menu"/>

</android.support.v4.widget.DrawerLayout>