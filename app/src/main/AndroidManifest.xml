<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.aliakseiKaraliou.onechatapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:name="com.github.aliakseiKaraliou.onechatapp.Application"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.aliakseiKaraliou.onechatapp.ui.activities.DialogsListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.aliakseiKaraliou.onechatapp.ui.activities.AuthActivity"
            android:noHistory="true"/>
        <activity android:name="com.github.aliakseiKaraliou.onechatapp.ui.activities.VkAuthActivity"/>
        <activity
            android:name="com.github.aliakseiKaraliou.onechatapp.ui.activities.ConversationActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>